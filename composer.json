{
    "name": "progredi/blog",
    "description": "CakePHP 3 Blog plugin for ProgrediCMS",
    "homepage": "http://www.progredi.co.uk",
    "license": "MIT",
    "type": "cakephp-plugin",
    "authors": [
        {
            "name": "Progredi",
            "homepage": "http://www.progredi.co.uk",
            "email": "support@progredi.co.uk",
            "role": "Author"
        }
    ],
    "require": {
        "php": ">=5.6",
        "cakephp/cakephp": "3.*",
        "ivanamat/cakephp3-markdown": "^1.0"
    },
    "require-dev": {
        "cakephp/cakephp-codesniffer": "^2.3",
        "phpunit/phpunit": "<6.0"
    },
    "autoload": {
        "psr-4": {
            "Progredi\\Blog\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
           "Cake\\Test\\": "./vendor/cakephp/cakephp/tests",
           "Progredi\\Blog\\Test\\": "tests"
         }
    }
}
