{
    "name": "progredi/blog",
    "description": "Blog plugin for CakePHP 3.x",
    "license": "MIT",
    "type": "cakephp-plugin",
    "authors": [
        {
            "name": "Progredi",
            "email": "support@progredi.co.uk"
        }
    ],
    "require": {
        "php": ">=5.6",
        "cakephp/cakephp": "3.3.*",
        "cebe/markdown": "1.0.x"
    },
    "require-dev": {
        "cakephp/cakephp-codesniffer": "^2.3",
        "phpunit/phpunit": "<6.0"
    },
    "autoload": {
        "psr-4": {
            "Progredi\\Blog\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
           "Cake\\Test\\": "./vendor/cakephp/cakephp/tests",
           "Progredi\\Blog\\Test\\": "tests"
         }
    }
}
