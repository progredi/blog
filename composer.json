{
    "name": "progredi/blog",
    "description": "Blog plugin for CakePHP 3 to be used with ProgrediCMS",
    "type": "cakephp-plugin",
    "version": "dev-master",
    "homepage": "http://www.progredi.co.uk",
    "license": "MIT",
    "authors": [
        {
            "name": "Progredi",
            "homepage": "http://www.progredi.co.uk",
            "email": "support@progredi.co.uk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.6",
        "cakephp/cakephp": "^3.4",
        "tanuck/cakephp-markdown": "^1.0"
    },
    "require-dev": {
        "cakephp/cakephp-codesniffer": "^2.3",
        "phpunit/phpunit": "^5.7|^6.0"
    },
    "autoload": {
        "psr-4": {
            "Progredi\\Blog\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
           "Progredi\\Blog\\Test\\": "tests",
           "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
         }
    }
}
